<p style="color: green"><%= notice %></p>

<h1>Users</h1>

<%= form_with(url: groups_path, method: "get", local: true) do |form| %>
  <div class="form-container">
    <div class="form-section">
      <%= form.label :musical_instrument_id, "Musical Instrument" %>
      <%= form.collection_select :musical_instrument_id, MusicalInstrument.all, :id, :name, prompt: "Select an instrument" %>
    </div>
    <div class="form-section">
      <%= form.label :music_genre_id, "Music Genre" %>
      <%= form.collection_select :music_genre_id, MusicGenre.all, :id, :name, prompt: "Select a genre" %>
    </div>
    <div class="form-section">
      <%= form.label :country_id, "Country" %>
      <%= form.collection_select :country_id, Country.all, :id, :name, prompt: "Select a country" %>
    </div>
    <div class="form-section">
      <%= form.label :region_id, "Region" %>
      <%= form.collection_select :region_id, Region.all, :id, :name, prompt: "Select a region" %>
    </div>
    <div class="form-section">
      <%= form.label :city_id, "City" %>
      <%= form.collection_select :city_id, City.all, :id, :name, prompt: "Select a city" %>
    </div>
    <div class="form-section">
      <%= form.submit "Filter" %>
      <%= button_tag "Clear Filters", type: 'reset', class: 'btn clear-button' %>
    </div class="form-section">
      <%= form.label :councert_experience, "Concert Experience" %>
      <%= form.check_box :has_concert_experience, {}, true, false%>
    </div>
  </div>
<% end %>

<div id="users">
  <% @users.each do |user| %>
    <div id="<%= dom_id user %>" class = "user">
      <%= render user %>
      <p>
        <%= link_to "Show this user", user %>
      </p>
    </div>
  <% end %>
</div>

<%= link_to "New user", new_user_path %>
