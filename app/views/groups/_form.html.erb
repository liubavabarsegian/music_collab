<%= form_with(model: group) do |form| %>
  <% if group.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(group.errors.count, "error") %> prohibited this group from being saved:</h2>

      <ul>
        <% group.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :description, style: "display: block" %>
    <%= form.text_area :description %>
  </div>

  <div>
    <%= form.label :members_number, style: "display: block" %>
    <%= form.number_field :members_number %>
  </div>

  <div>
    <%= form.label :music_genres, style: "display: block" %>
    <% MusicGenre.all.each do |genre| %>
      <label>
        <%= check_box_tag "group[group_genres_attributes][][genre_id]", genre.id, group.genres.include?(genre) %>
        <%= genre.name %>
      </label>
    <% end %>
  </div>

  <!-- Leader's instrument -->
  <div>
    <%= form.collection_select(:instrument_ids, current_user.musical_instruments, :id, :name, { include_hidden: false }, multiple: false) %>
    <%= form.label :instrument_ids, "Select Your Instrument" %>
  </div>

  <!-- Container for group instrument requirements -->
  <div id="instrument-requirements">
    <%= form.fields_for :group_instrument_requirements do |gir_form| %>
      <%= render 'instrument_requirement', gir_form: gir_form %>
    <% end %>
  </div>

  <div>
    <%= link_to "Add Instrument Requirement", add_instrument_requirement_path(group:  group), method: :post, class: "add-instrument-requirement"%>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>

  

