<div id="<%= dom_id group %>">
  <p>
    <strong>Name:</strong>
    <%= group.name %>
  </p>

  <p>
    <strong>Leader:</strong>
    <%= group.leader.name %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= group.description %>
  </p>

  <p>
    <strong>Members number:</strong>
    <%= group.members_number %>
  </p>

  <p>
    <strong>Music Genres :</strong>
    <ul>
      <% group.genres.each do |genre| %>
        <li><%= genre.name %></li>
      <% end %>
    </ul>
  </p>

</div>
